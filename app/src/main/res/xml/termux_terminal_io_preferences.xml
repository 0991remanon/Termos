<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="keyboard"
        app:title="@string/termux_keyboard_header">

        <SwitchPreferenceCompat
            app:key="soft_keyboard_enabled"
            app:summaryOff="@string/termux_soft_keyboard_enabled_off"
            app:summaryOn="@string/termux_soft_keyboard_enabled_on"
            app:title="@string/termux_soft_keyboard_enabled_title" />

        <SwitchPreferenceCompat
            app:key="soft_keyboard_enabled_only_if_no_hardware"
            app:summaryOff="@string/termux_soft_keyboard_enabled_only_if_no_hardware_off"
            app:summaryOn="@string/termux_soft_keyboard_enabled_only_if_no_hardware_on"
            app:title="@string/termux_soft_keyboard_enabled_only_if_no_hardware_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="touchscreen"
        app:title="@string/termux_touchscreen_header">

        <SwitchPreferenceCompat
            app:key="pinch_in_enabled"
            app:summaryOff="@string/termux_pinch_in_off"
            app:summaryOn="@string/termux_pinch_in_on"
            app:title="@string/termux_pinch_in_title" />

        <SwitchPreferenceCompat
            app:key="pinch_out_enabled"
            app:summaryOff="@string/termux_pinch_out_off"
            app:summaryOn="@string/termux_pinch_out_on"
            app:title="@string/termux_pinch_out_title" />

        <SwitchPreferenceCompat
            app:key="double_tap_enabled"
            app:summaryOff="@string/termux_double_tap_off"
            app:summaryOn="@string/termux_double_tap_on"
            app:title="@string/termux_double_tap_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="other"
        app:title="@string/termux_other_header">

		<SwitchPreferenceCompat
            app:key="vibration_enabled"
            app:summaryOff="@string/termux_vibration_off"
            app:summaryOn="@string/termux_vibration_on"
            app:title="@string/termux_vibration_title" />

        <SwitchPreferenceCompat
            app:key="quick_exit_enabled"
            app:summaryOff="@string/termux_quick_exit_off"
            app:summaryOn="@string/termux_quick_exit_on"
            app:title="@string/termux_quick_exit_title" />

    </PreferenceCategory>

</PreferenceScreen>
